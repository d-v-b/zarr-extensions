{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "oneOf": [
      {
        "type": "object",
        "properties": {
          "name": {
            "const": "datetime64"
          },
          "configuration": {
            "type": "object",
            "properties": {
              "unit": {
                "type": "string"
              }
            },
            "required": ["unit"],
            "additionalProperties": false
          }
        },
        "required": ["name", "configuration"],
        "additionalProperties": false
      },
      { "const": "datetime64" }
    ]
  }